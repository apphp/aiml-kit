# See: editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
tab_width = 4
indent_size = 4
trim_trailing_whitespace = true

[*.php]
tab_width = 4
indent_size = 4
ij_php_align_key_value_pairs = true

[*.html]
tab_width = 4
indent_size = 4

[*.xml]
tab_width = 4
indent_size = 4

[*.json]
tab_width = 4
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4
indent_size = 4

[*.md]
trim_trailing_whitespace = false
